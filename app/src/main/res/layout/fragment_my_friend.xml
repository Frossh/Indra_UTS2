<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg11"
    android:layout_margin="5dp"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        app:cardCornerRadius="20dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Logo Gusti Indra"
            android:layout_gravity="top|center_horizontal"/>
        <ImageView
            android:layout_width="200dp"
            android:layout_height="129dp"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:contentDescription="@string/title_1"
            android:src="@drawable/kot1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logo Terbaru Gusti Indra ke Frossh Indra"
            android:layout_gravity="bottom|center_horizontal"
            android:textSize="10sp"
            android:textColor="#434343"
            android:textStyle="bold"
            />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        app:cardCornerRadius="20dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Mouz Art Logo"
            android:layout_gravity="top|center_horizontal"/>
        <ImageView
            android:layout_width="200dp"
            android:layout_height="129dp"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:contentDescription="@string/title_1"
            android:src="@drawable/kot2" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Komisi Logo untuk Mouz Arts"
            android:layout_gravity="bottom|center_horizontal"
            android:textSize="10sp"
            android:textColor="#434343"
            android:textStyle="bold"
            />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        app:cardCornerRadius="20dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Logo Frossh Indra"
            android:layout_gravity="top|center_horizontal"/>
        <ImageView
            android:layout_width="200dp"
            android:layout_height="129dp"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:contentDescription="@string/title_1"
            android:src="@drawable/kot3" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logo Orisinil Frossh Indra"
            android:layout_gravity="bottom|center_horizontal"
            android:textSize="10sp"
            android:textColor="#434343"
            android:textStyle="bold"
            />
    </androidx.cardview.widget.CardView>

</LinearLayout>