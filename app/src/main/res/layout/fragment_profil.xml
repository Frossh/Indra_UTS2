<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg11"
    android:layout_margin="5dp"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tentang Aplikasi"
        android:layout_gravity="top|center"
        android:textSize="20sp"
        android:textColor="@color/white"/>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="129dp"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:contentDescription="@string/title_1"
        android:src="@drawable/kot1" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Portofolio App"
        android:layout_gravity="top|center"
        android:textSize="30sp"
        android:layout_margin="30dp"
        android:layout_marginBottom="30dp"
        android:textColor="@color/white"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ialah aplikasi yang dikembangkan oleh frossh indra sebagai aplikasi yang dapat digunakan untuk seseorang membagikan portofolio dirinya ke khalayak umum"
        android:layout_gravity="top|center"
        android:textSize="15sp"
        android:layout_marginBottom="15dp"
        android:textColor="@color/white"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aplikasi ini dibuat menggunakan Android Studio (Chipmunk) dengan menggunakan bahasa pemrograman Kotlin"
        android:layout_gravity="top|center"
        android:textSize="15sp"
        android:textColor="@color/white"/>




</LinearLayout>